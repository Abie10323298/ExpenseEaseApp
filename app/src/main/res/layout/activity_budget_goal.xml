<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryInverse"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BudgetGoalActivity">

    <EditText
        android:id="@+id/monthInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_background2"
        android:clickable="true"
        android:drawableEnd="@android:drawable/ic_menu_today"
        android:focusable="false"
        android:hint="Select Month"
        android:inputType="none"
        android:padding="12dp" />

    <EditText
        android:id="@+id/salaryInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_background2"
        android:hint="Monthly Salary"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <EditText
        android:id="@+id/minBudgetInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_background2"
        android:hint="Minimum Budget"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <EditText
        android:id="@+id/maxBudgetInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_background2"
        android:hint="Maximum Budget"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <Button
        android:id="@+id/saveBudgetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:text="Save Budget Goal" />
</LinearLayout>
