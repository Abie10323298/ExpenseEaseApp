<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryInverse"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/monthText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="?attr/actionModeSplitBackground"
        android:padding="8dp"
        android:text="Month:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/initialSalaryTextview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeSplitBackground"
            android:padding="8dp"
            android:text="Initial Salary:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/initialSalaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_background2"
            android:padding="8dp"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/currentSalaryTextView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeSplitBackground"
            android:padding="8dp"
            android:text="Current Salary:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/currentSalaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_background2"
            android:padding="8dp"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/budgetGoalTextview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="?attr/actionModeSplitBackground"
            android:padding="8dp"
            android:text="Budget Goal:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/budgetGoalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_background2"
            android:padding="8dp"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/salaryProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="?attr/actionModeSplitBackground"
        android:max="100"
        android:progress="0"
        android:progressTint="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/progressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/actionModeSplitBackground"
        android:padding="8dp"
        android:text="0% of your salary spent"
        android:textSize="16sp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/expenseChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="?attr/actionModeSplitBackground"
        android:padding="8dp" />
</LinearLayout>
